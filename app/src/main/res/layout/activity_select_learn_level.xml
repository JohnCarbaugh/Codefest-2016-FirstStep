<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LessonActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lessons"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/abc_btn_check_to_on_mtrl_000"
            android:onClick="sendMessage" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/abc_btn_check_to_on_mtrl_015" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/abc_btn_radio_to_on_mtrl_015" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:layout_row="0"
            android:layout_column="3"
            android:src="@drawable/abc_ic_search_api_mtrl_alpha" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton5"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/abc_ic_star_black_16dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton6"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/abc_ic_menu_paste_mtrl_am_alpha" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton7"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/abc_ic_clear_mtrl_alpha" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton8"
            android:layout_row="1"
            android:layout_column="3"
            android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton9"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/abc_btn_radio_to_on_mtrl_015" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton10"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/abc_btn_check_to_on_mtrl_000" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton11"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha" />
    </GridLayout>

</RelativeLayout>
